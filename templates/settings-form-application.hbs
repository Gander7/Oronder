<form autocomplete="off">
    <div>
        {{#if guild}}
            <h1>{{guild.name}}</h1>
        {{else}}
            <h2>{{localize "oronder.No-Guild"}}</h2>
        {{/if}}
    </div>
    {{#if guild}}
        <!--        <div class="form-group">-->
        <!--            <label for="appt">Choose a time for your meeting:</label>-->
        <!--            <input type="time" id="appt" name="appt" min="09:00" max="18:00" required/>-->
